<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Question Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@drawable/question_number_background"
                android:padding="8dp"
                android:minWidth="32dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/questionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Multiple Choice"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/question_type_background"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Question Text -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the capital of France?"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Multiple Choice Options -->
        <RadioGroup
            android:id="@+id/multipleChoiceOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/optionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="A) London"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/optionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="B) Berlin"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/optionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="C) Paris"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/optionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D) Madrid"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:buttonTint="@color/primary" />
        </RadioGroup>

        <!-- True/False Options -->
        <RadioGroup
            android:id="@+id/trueFalseOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/trueOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="True"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/falseOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="False"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:buttonTint="@color/primary" />
        </RadioGroup>

        <!-- Input Answer Field -->
        <LinearLayout
            android:id="@+id/inputAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your answer"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text_primary" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Matching Type Layout -->
        <LinearLayout
            android:id="@+id/matchingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Word Bank -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Word Bank:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/wordBankChips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="France"
                    android:checkable="false"
                    app:chipBackgroundColor="@color/background_secondary" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Germany"
                    android:checkable="false"
                    app:chipBackgroundColor="@color/background_secondary" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spain"
                    android:checkable="false"
                    app:chipBackgroundColor="@color/background_secondary" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Answer Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your answer"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/matchingAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text_primary" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
